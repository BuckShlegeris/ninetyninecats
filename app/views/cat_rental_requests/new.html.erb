<h1>Request <%= @cat.name %>!</h1>

<h2>all the rental requests for <%=@cat.name%></h2>
<table>
	<tr>
		<td>Start date</td>
		<td>End date</td>
		<td>Status</td>
		<td></td>
	</tr>

	<% @cat.cat_rental_requests.order(:start_date).each do |request| %>
		<tr>
			<td>
				<%= request.start_date %>
			</td>
			<td>
				<%= request.end_date %>
			</td>
			<td>
				<%= request.status %>
			</td>
		</tr>
	<% end %>
</table>

<h2> enter request details here: </h2>
<form
	action=<%= cat_cat_rental_requests_url%>
	method="POST">

	<input type="hidden" name="cat_rental_request[cat_id]" value=<%= params[:cat_id] %> >
	<table>
		<tr>
			<td>
				<label for="cat_rental_request_start_date">
					Start date
				</label
			</td>
			<td>
				<input name="cat_rental_request[start_date]" id="start_date" type="text">
			</td>
		</tr>

		<tr>
			<td>
				<label for="cat_rental_request_end_date">
					End date
				</label
			</td>
			<td>
				<input name="cat_rental_request[end_date]" id="end_date" type="text">
			</td>
		</tr>

	</table>

	<input type="submit" value="request cat!">
</form>